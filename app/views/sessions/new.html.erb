<h1>Login</h1>
<!-- form to log in -->

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email %><br>
    <%= email_field_tag :email, params[:email]  %>
  </p>
  
  <p>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </p>
  
  <%= submit_tag "Log in" %>

  <% end %>
